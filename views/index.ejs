<div class="row row-cols-2 row-cols-md-3 g-3 listing-titals">
    <% for(listing of allListing) {%>
      <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
         
        <div class="card card-sel" style=" border: none;">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body ">
            <p class="card-text"><b><%= listing.title %> </b><br/>
               <%= listing.price%> 
               &nbsp;  <i class="gst"> +18% Gst</i>
            </p>  
           
          </div>
        </div>
      </a>
      

      <%  }%>
  

   </div>  
   

       

<style>
  body {
    background-color: white;
    color: black;
    font-family: Arial, sans-serif;
  }

  /* Section container */
  .listing-section {
    margin: 2rem 0;
    margin-top: 10rem;
  }

  .listing-section h2 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
    margin-left: 10px;
  }

  /* Horizontal scroll row */
  .listing-titals {
    display: flex;
    overflow-x: auto;
    margin-top: 10px;
    /* gap: 15px;
    padding: 10px; */
    scroll-behavior: smooth;
  }

  /* Hide scrollbar */
  .listing-titals::-webkit-scrollbar {
    display: none;
  }

  /* Cards */
  .card-sel {
    background:white;
    color:black;
    border-radius: 10px;
    flex: 0 0 auto;
    width: 100%; /* mobile default */
    transition: transform 0.3s ease;
  }

  .card-sel:hover {
    transform: scale(1.05);
  }

  /* Image style */
  .card-sel img {
    width: 100%;
    height: 380px;
    border-radius: 20px;
    object-fit: cover;
  }

  /* Card text */
  .card-body {
    padding: 10px;
  }

  .card-text {
    font-size: 0.9rem;
    color:black;
    text-decoration: none;
  }

  .gst {
    color: #aaa;
    font-size: 0.75rem;
  }

  /* Responsive columns */
  @media (min-width: 768px) {
    .card-sel {
      width: 100%; /* 4â€“5 cards per row for larger screens */
    }
  }

 #filters {
    display: flex;
     flex-wrap: wrap;
     align-items: center;
   }



   #filter{
    text-align: center;
    opacity: 0.7;
    margin-right: 2rem;
    margin-top: 0.5rem;

  }
    #filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    #filter p{
      font-size: 0.8rem;
    }
</style>



  <script>
   let taxswitch = document.getElementById("flexSwitchCheckDefault");
   taxswitch.addEventListener("click" , () =>{
      let taxinfo =document.getElementsByClassName("gst");
      for(info of taxinfo){
         if(info.style.display != "inline"){
            info.style.display = "inline";
         }else {
            info.style.display = "none";
         }
      }
   });
  </script>
